apiVersion: v1
kind: ServiceAccount
metadata:
{% if k8s_resource_serviceaccount_params.annotations is defined %}
  annotations:
    {{k8s_resource_serviceaccount_params.annotations | to_nice_yaml(indent=2) | indent(width=4, indentfirst=false)}}
{% endif %}
{% if k8s_resource_serviceaccount_params.labels is defined %}
  labels:
    {{k8s_resource_serviceaccount_params.labels | to_nice_yaml(indent=2) | indent(width=4, indentfirst=false)}}
{% endif %}
  name: {{k8s_resource_serviceaccount_params.name}}
  namespace: {{k8s_resource_serviceaccount_params.namespace}}
